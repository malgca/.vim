set nocompatible
set runtimepath=$home\.vim,$home\.vim\after,$Vim\vimfiles,$Vim\vimfiles\after,$VIMRUNTIME

source $home/.vim/abbreviations.vim
source $home/.vim/config/gvim/functions.vim
source $home/.vim/config/gvim/mappings.vim
source $home/.vim/config/gvim/autocommands.vim

source $VIMRUNTIME/vimrc_example.vim
source $VIMRUNTIME/mswin.vim

behave mswin

set shell=powershell
set shellcmdflag=-command

set statusline=%F%<\ %=[TYPE=%Y]\ %=[%p%%]
set laststatus=2

set guifont=Consolas:h14

set number
set numberwidth=3

set cursorline

"set isfname+=32

set incsearch

set tabstop=4

set autoindent
set smartindent
